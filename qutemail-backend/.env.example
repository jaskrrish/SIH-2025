SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
# For local development with SQLite (default)
DATABASE_URL=sqlite:///db.sqlite3
# For production with PostgreSQL (use docker-compose)
# DATABASE_URL=postgresql://qutemail_user:qutemail_pass@localhost:5432/qutemail_db

# Redis & Celery
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# QKD Settings
QKD_KM_URL=http://localhost:8080
QKD_SIMULATOR_MODE=True

# ===================================
# Mail Server Settings
# ===================================

# SMTP Settings (Postfix)
# For development (use docker-compose postfix)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USE_TLS=True
# For production, set to your Postfix server
# SMTP_HOST=mail.qutemail.local
# SMTP_USERNAME=django@qutemail.local
# SMTP_PASSWORD=your-smtp-password

# IMAP Settings (Dovecot)
# For development (use docker-compose dovecot)
IMAP_HOST=localhost
IMAP_PORT=993
IMAP_USE_SSL=True
# For production, set to your Dovecot server
# IMAP_HOST=mail.qutemail.local

# Mail Domain
MAIL_DOMAIN=qutemail.local
MAIL_HOSTNAME=mail.qutemail.local

# Virtual Mailbox Settings
VIRTUAL_MAILBOX_BASE=/var/mail/vhosts
VIRTUAL_UID=5000
VIRTUAL_GID=5000

# DKIM Settings
DKIM_SELECTOR=default
DKIM_DOMAIN=qutemail.local

# Email Storage Quotas (in MB)
DEFAULT_STORAGE_QUOTA_MB=1024

# Auto-fetch interval (in seconds, 0 to disable)
DEFAULT_AUTO_FETCH_INTERVAL=60
